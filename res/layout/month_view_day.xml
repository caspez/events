<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dayOfMonthLayout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/month_view_day_height"
    android:layout_margin="@dimen/no_margin"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="@dimen/no_margin" >

    <TextView
        android:id="@+id/dayOfMonth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/no_margin"
        android:padding="@dimen/no_margin"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="@dimen/defualtStaticTextSize" />

</LinearLayout>